{
    "name": "fasttext",
    "n_gpu": 1,

    "arch": {
        "type": "FastText",
        "args": {
            "vocab_size": 4065,
            "gramn2_vocab_size": 78756,
            "embed_dim": 125,
            "hidden_dims": [125,125],
            "n_classes": 10
        }
    },
    "data_loader": {
        "type": "ThucnewsDataLoader",
        "args":{
            "data_dir": "./datas/thucnews/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0009,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_with_log_loss",
    "metrics": [
        "accuracy_sigmod"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 150,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "image":false,
        "tensorboard": true
    }
}
