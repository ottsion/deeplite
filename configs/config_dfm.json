{
    "name": "DeepFM",
    "n_gpu": 1,

    "arch": {
        "type": "DeepFM",
        "args": {
            "field_dims": [9,23,20,15,26,32,19,18,37,5,10,5,17,10,22,8,7,7,8,3,9,3,5,6,8,7,8,5,8,10,14,5,5,8,4,9,9,12,6],
            "embed_dim": 15,
            "mlp_dims":[28,56,28],
            "dropout": 0.5
        }
    },
    "data_loader": {
        "type": "CriteoDataLoader",
        "args":{
            "data_dir": "datas/criteo/raw/train.txt",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0009,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_with_log_loss",
    "metrics": [
        "accuracy_sigmod"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 150,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "image":false,
        "tensorboard": true
    }
}
